<h1>Listing users</h1>
<div class="row" style="color: blue;">
  <div class="col-md-2">Name</div>
  <div class="col-md-3">Email</div>
  <div class="col-md-3">Kindlemail</div>
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>        
</div>
<% @users.each do |user| %>
<div class="row">
  <div class="col-md-2"><%= user.name %></div>
  <div class="col-md-3"><%= user.email %></div>
  <div class="col-md-3"><%= user.kidlemail %></div>
  <div class="col-md-3" style="margin-top: 0.11em;">
    <div class="btn-group btn-group-xs">
      <button type="button" class="btn btn-info"><%= link_to 'Show', user %></button>
      <button type="button" class="btn btn-info"><%= link_to 'Edit', edit_user_path(user) %></button>
      <button type="button" class="btn btn-warning"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </div>    
  </div>
</div>
<% end %>
<button type="button" class="btn btn-xs btn-success" style="margin-top: 0.4em;">
  <%= link_to 'New User', new_user_path %>
</button>
