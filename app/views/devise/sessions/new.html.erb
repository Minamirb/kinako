<div class="container">
  <div class="col-lg-4">
    <h2>Sign in</h2>    
    <%= form_for(resource, :class => "form-signin", :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.email_field :email, :class => "form-control", :placeholder => "Email Adress", :required => true, :autofocus => true %>
      <%= f.password_field :password, :class => "form-control", :placeholder => "Password", :repuired => true %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <%= f.submit "Sign in", :class => "btn btn-small btn-info btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>    
  </div>
</div>
